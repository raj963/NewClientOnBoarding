@model ClientOnBoarding.Models.tblCustomerContact

<div id="dvContact" class="DilogBoxWidth">
    <form class="form-horizontal customerForms" role="form" id="frmCustomer" action="/ManageContacts/Contact" method="post">
        @Html.HiddenFor(model => model.ContactID)


        <div class="form-group">
            <div class="pull-left LableFont required">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception ">Contact Name<span class="red"> *</span></label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.ContactName, new { maxlength = 50, @class = "form-control " })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.ContactName)</div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">ContactType</label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">

                    @Html.DropDownListFor(model => model.ContactType.ID, new SelectList(ViewBag.ContactType, "ID", "Name"), new { @class = "form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.ContactType.ID)</div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Notification Email</label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.Email, new { maxlength = 50, @class = "form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.Email)</div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Notification Primary phone no</label>
            </div>
            <div class="pull-left">
                <div class="textBox customerPmExptest gapt0p">@Html.TextBoxFor(model => model.FirstPhoneNo, new { maxlength = 50, @class = "form-control", placeholder = "xxx-xxx-xxxx" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.FirstPhoneNo)</div>
                </div>
            </div>

            <div class="pull-left">
                <div class="textBox customerPmExp gaptime">
                    @Html.TextBoxFor(model => model.ExtNofirst, new { maxlength = 10, @class = "form-control", placeholder = "Ext. No" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.ExtNofirst)</div>
                </div>
            </div>

        </div>
        <div class="clearfix"></div>

        <div class="clearfix"></div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Notification Secondary phone no</label>
            </div>
            <div class="pull-left">
                <div class="textBox customerPmExptest gapt0p">@Html.TextBoxFor(model => model.SecondPhoneNo, new { maxlength = 50, @class = "form-control", placeholder = "xxx-xxx-xxxx" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.SecondPhoneNo)</div>
                </div>
            </div>

            <div class="pull-left">
                <div class="textBox customerPmExp gaptime">
                    @Html.TextBoxFor(model => model.ExtNosecond, new { maxlength = 10, @class = "form-control", placeholder = "Ext. No" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.ExtNosecond)</div>
                </div>
            </div>

        </div>
        <div class="clearfix"></div>

        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Notification SMS</label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.SMS, new { maxlength = 50, @class = "form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.SMS)</div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="panel-footer" style="width: 637px; margin-left: -14px; margin-top: 25px;">
            <button type="submit" class="btn btn-primary btn-sm customerSaveButton" id="Sbmt">&nbsp;&nbsp;&nbsp;SAVE&nbsp;&nbsp;&nbsp;</button>
        </div>
    </form>
</div>

