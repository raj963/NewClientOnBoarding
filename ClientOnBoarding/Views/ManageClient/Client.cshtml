@model ClientOnBoarding.Models.tblClientSite

<div id="dvClient" class="DilogBoxWidth">
    <form class="form-horizontal customerForms" style="padding-top: 22px" role="form" id="frmCustomer" action="/ManageClient/Client" method="post">
        @Html.HiddenFor(model => model.ClientID)
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Business Name<span class="red"> *</span></label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.BusinessName, new { maxlength = 50, @class = "form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.BusinessName)</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Service Type </label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">
                    @Html.DropDownListFor(model => model.ServiceType.ID, new SelectList(ViewBag.ServiceTypes, "ID", "Name"), new { @class = " form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.ServiceType.ID)</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Time Zone </label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">
                    @Html.DropDownListFor(model => model.TimeZone.ID, new SelectList(ViewBag.TimeZones, "ID", "Name"), new { @class = " form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.TimeZone.ID)</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Status </label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">
                    @Html.DropDownListFor(model => model.Status.ID, new SelectList(ViewBag.Staus, "ID", "Name"), new { @class = " form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.Status.ID)</div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="panel-footer" style="width: 637px; margin-left: -14px; margin-top: 25px;">
            <button type="submit" class="btn btn-primary btn-sm customerSaveButton">&nbsp;&nbsp;&nbsp;SAVE&nbsp;&nbsp;&nbsp;</button>
        </div>
    </form>
</div>



