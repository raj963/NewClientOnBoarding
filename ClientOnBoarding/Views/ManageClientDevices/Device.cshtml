                    @Html.DropDownListFor(model => model.IsPatchingPolicy.ID, new SelectList(ViewBag.PatchingPoly, "PatchingPolicyIDWR", "PolicyNameND"), new { @class = "form-control" })
                    <div class="ValidationError">@Html.ValidationMessageFor(model => model.IsPatchingPolicy.ID)</div>
                </div>
            </div>
        </div>
