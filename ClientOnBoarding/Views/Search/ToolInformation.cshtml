@model ClientOnBoarding.Models.tbltoolInfomation

<div class="panel-body">
    @if (Model.ToolTypeRT > 0)
    {
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidth">RMM Tool Name</label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.RMMTool, new { maxlength = 50, @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidth">RMM Tool UserID</label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.RMMToolUserName, new { maxlength = 50, @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidth">RMM Tool Password</label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.PasswordFor(model => model.RMMToolPassword, new { maxlength = 50, @class = "form-control",@value=Model.RMMToolPassword })
                </div>
            </div>
            <input type="checkbox" name="agree" style="margin-left: 20px; margin-top: 10px; float: left;" id="toolInfoChkbox1">
            <label class="labelcheckbox" for="agree" style="font-weight: 100; font-size: 14px;">
                show text
            </label>
        </div>
    }
    else if (Model.ToolTypePT > 0)
    {
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidth">Ticketing/PSA Tool </label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.PSATool, new { maxlength = 50, @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidth">PSA Tool UserID </label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.TextBoxFor(model => model.PSAToolUserName, new { maxlength = 50, @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="pull-left LableFont">
                <label for="inputCompnay" class="col-lg-2 control-label LableWidth">PSA Tool Password </label>
            </div>
            <div class="pull-left">
                <div class="textBoxCompany">@Html.PasswordFor(model => model.PSAToolPassword, new { maxlength = 50, @class = "form-control",@value=Model.PSAToolPassword })
                </div>
            </div>
            <input type="checkbox" name="agree" style="margin-left: 20px; margin-top: 10px; float: left;" id="toolInfoChkbox2">
            <label class="labelcheckbox" for="agree" style="font-weight: 100; font-size: 14px;">
                show text
            </label>
        </div>
    }
</div>
