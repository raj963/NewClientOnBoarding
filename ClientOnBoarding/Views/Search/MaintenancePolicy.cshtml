@model ClientOnBoarding.Models.tblMaintenancePolicy

<div class="form-group">
    <div class="pull-left LableFont">
        <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Activity Name</label>
    </div>
    <div class="pull-left">
        <div class="textBoxCompany">
            @Html.TextBoxFor(model => model.ActivityName, new { maxlength = 50, @class = " form-control" })
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<div class="form-group">
    <div class="pull-left LableFont">
        <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Define Regular Schedule</label>
    </div>
    <div class="pull-left">
        <div class="textBoxCompany">
            @Html.TextBoxFor(model => model.ScheduleType.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="form-group">
    <div class="pull-left LableFont">
        <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Define Week Day (for weekly schedule)</label>
    </div>
    <div class="pull-left">
        <div class="textBoxCompany">
            @Html.TextBoxFor(model => model.WeekOfDays.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="form-group">
    <div class="pull-left LableFont">
        <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Define Month of Day (for Monthly Schedule) </label>
    </div>
    <div class="pull-left">
        <div class="textBoxCompany">
            @Html.TextBoxFor(model => model.MonthOfDays.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="form-group">
    <div class="pull-left LableFont">
        <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Scheduled Time</label>
    </div>
    <div class="pull-left">
        <div class="textBox customerPmExp gapt0p ">
            @Html.TextBoxFor(model => model.ScheduledStartTime, new { maxlength = 50, @class = "form-control jquery_ptTimeSelect" })
        </div>
    </div>
    <div class="pull-left">
        <div class="textBox customerPmExp gaptime ">
            @Html.TextBoxFor(model => model.ScheduledEndTime, new { maxlength = 50, @class = "form-control jquery_ptTimeSelect" })
        </div>
    </div>
    <div class="pull-left">
        <div class="textBox customerPmExp">
            @Html.TextBoxFor(model => model.TimeZone.Name, new { @class = "DropDownListexp form-control" })
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="form-group">
    <div class="pull-left LableFont">
        <label for="inputCompnay" class="col-lg-2 control-label LableWidthEXception">Start Date</label>
    </div>
    <div class="pull-left">
        <div class="textBoxCompany">@Html.TextBoxFor(model => model.ScheduledStartDate, new { maxlength = 50, @class = "form-control jquery_datepicker", @Value = Model.ScheduledStartDate.ToString("MM/dd/yyyy") })
        </div>
    </div>
    <div class="clearfix"></div>
</div>

