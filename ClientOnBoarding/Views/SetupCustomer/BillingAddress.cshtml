@model ClientOnBoarding.Models.BillingAddress
<script src="~/Scripts/maskedinput.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $.mask.definitions['~'] = "[+-]";
        $("#Zip").mask("(99999)-(9999)");
        $("input").blur(function () {
            $("#info").html("Unmasked value: " + $(this).mask());
        }).dblclick(function () {
            $(this).unmask();
        });
    });

</script>
<div id="BillingAddress" class="tab-pane active">
    <div class="pageBorder">

        <form class="form-horizontal compnayVenderForm" role="form" id="frmBillingAddress" action="/CompanyVendor/BillingAddress" method="post">
            @Html.HiddenFor(model => model.CustomerID, new { maxlength = 50, @class = "form-control" })

            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="form-group">
                        <div class="pull-left LableFont">
                            <label for="inputCompnay" class="col-lg-2 control-label LableWidth">Address</label>
                        </div>
                        <div class="pull-left">
                            <div class="largeBox">@Html.TextBoxFor(model => model.CompanyAddress, new { maxlength = 100, @class = "form-control" })
                                <div class="ValidationError">@Html.ValidationMessageFor(model => model.CompanyAddress)</div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="form-group">
                        <div class="pull-left LableFont">
                            <label for="inputCity" class="col-lg-2 control-label LableWidth">City</label>
                        </div>
                        <div class="pull-left">
                            <div class="addresstextBox">@Html.TextBoxFor(model => model.City, new { maxlength = 20, @class = "form-control" })
                                <div class="ValidationError">@Html.ValidationMessageFor(model => model.City)</div>
                            </div>
                        </div>
                        <div class="pull-left LableFont billingState" >
                            <label for="inputSt" class="col-lg-1 control-label LableWidthStateFax">State</label>
                        </div>
                        <div class="pull-left">
                            <div class="mintextBox">@Html.TextBoxFor(model => model.State, new { maxlength = 2, @class = "form-control" })
                                <div class="ValidationError">@Html.ValidationMessageFor(model => model.State)</div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="form-group">
                        <div class="pull-left LableFont">
                            <label for="inputZip" class="col-lg-2 control-label LableWidth">Zip</label>
                        </div>
                        <div class="pull-left">
                            <div class="addresstextBox">@Html.TextBoxFor(model => model.Zip, new { maxlength = 15, @class = "form-control" })
                                <div class="ValidationError">@Html.ValidationMessageFor(model => model.Zip)</div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-primary btn-sm billingSave">&nbsp;&nbsp;&nbsp;SAVE&nbsp;&nbsp;&nbsp;</button>
                </div>
            </div>
        </form>
    </div>
</div>

